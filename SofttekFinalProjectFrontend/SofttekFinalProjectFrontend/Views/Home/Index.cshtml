@model SofttekFinalProjectFrontend.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

@Html.HiddenFor(x=> x.Token)

@Html.HiddenFor(x=> x.Id)


<div class="container text-center mt-5">
    <h1 class="display-4">Welcome to the Project</h1>
</div>
<div class="container d-flex justify-content-center">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="/images/refinery-514010_1280.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/oil-rig-514035_1280.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/oil-rig-512531_1280.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>



<script src="~/js/Home/Home.js"></script>