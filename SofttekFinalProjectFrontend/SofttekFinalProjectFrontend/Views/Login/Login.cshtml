@model SofttekFinalProjectFrontend.ViewModels.LoginViewModel

@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Login 10</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/login/login.css" rel="stylesheet" />

</head>
<body class="img js-fullheight" style="background-image: url(/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Project Integration Softttek Frontend</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <form action="Login/LoginByEmail" class="signin-form">
                            @if (Model != null)
                            {
                                <div class="form-group">
                                    <p class="error-login">@Model.ErrorMessage</p>
                                </div>
                            }
                            @if (Model == null)
                            {
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="User" name="Email" required>
                                </div>
                                <div class="form-group">
                                    <input id="password-field" type="password" class="form-control" placeholder="Password" name="Password" required autocomplete="off">
                                    <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary submit px-3">Login</button>
                                </div>
                            }
                        </form>
                        @if (Model != null)
                        {
                            <div class="form-group">
                                <button type="button" class="form-control  btn btn-primary submit px-3" onclick="clearModel()">Retry</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        function clearModel() {

            window.location.href = 'https://localhost:7167/';
            return false;
        }
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/login/login.js"></script>

</body>
</html>
